<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="2.5dp" />
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="0dip"
                android:color="#FFFFFF" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>

</selector>
